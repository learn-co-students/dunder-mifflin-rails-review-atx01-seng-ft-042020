<%= form_for(@employee) do |f| %>
    <label>Employee first_name:</label><br>
    <%= f.text_field :first_name %><br>

    <label>Employee last_name:</label><br>
    <%= f.text_field :last_name %><br>

    <label>Employee alias:</label><br>
    <%= f.text_field :alias %><br>

    <label>Employee title:</label><br>
    <%= f.text_field :title %><br>

    <label>Employee office:</label><br>
    <%= f.text_field :office %><br>

    <label>Employee img_url:</label><br>
    <%= f.text_field :img_url %><br>

    <label>Employee dog_id:</label><br>
    <%= f.collection_select :dog_id, @dogs, :id, :name %>

    <%= f.submit %>
<% end %>